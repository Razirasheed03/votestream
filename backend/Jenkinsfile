pipeline {
  agent any

  options {
    disableConcurrentBuilds()
  }

  environment {
    APP_NAME = "votestream-backend"
    APP_DIR  = "backend"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install dependencies') {
      steps {
        dir(APP_DIR) {
          sh '''
            # Always install devDependencies for build
            export NODE_ENV=development
            npm install --no-audit --no-fund
          '''
        }
      }
    }

    stage('Build') {
      steps {
        dir(APP_DIR) {
          sh '''
            export NODE_ENV=development
            npm run build
          '''
        }
      }
    }

    stage('Deploy') {
      steps {
        dir(APP_DIR) {
          sh '''
            # Runtime is production
            export NODE_ENV=production

            pm2 describe "$APP_NAME" >/dev/null 2>&1 \
              && pm2 restart "$APP_NAME" \
              || pm2 start dist/server.js --name "$APP_NAME"

            pm2 save
          '''
        }
      }
    }
  }

  post {
    success {
      echo "✅ CI/CD SUCCESS"
    }
    failure {
      echo "❌ CI/CD FAILED"
    }
  }
}
