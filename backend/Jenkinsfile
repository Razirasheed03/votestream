pipeline {
  agent any

  options {
    disableConcurrentBuilds()
  }

  environment {
    APP_NAME = "votestream-backend"
    APP_DIR  = "backend"
    NODE_ENV = "production"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install dependencies') {
      steps {
        dir(APP_DIR) {
          sh 'npm install --no-audit --no-fund'
        }
      }
    }

    stage('Build') {
      steps {
        dir(APP_DIR) {
          sh 'npm run build'
        }
      }
    }

    stage('Deploy') {
      steps {
        dir(APP_DIR) {
          sh '''
            pm2 describe "$APP_NAME" >/dev/null 2>&1 \
              && pm2 restart "$APP_NAME" \
              || pm2 start dist/server.js --name "$APP_NAME"
            pm2 save
          '''
        }
      }
    }
  }

  post {
    success {
      echo "CI/CD SUCCESS"
    }
    failure {
      echo "CI/CD FAILED"
    }
  }
}
